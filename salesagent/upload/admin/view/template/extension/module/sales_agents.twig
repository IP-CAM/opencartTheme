{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right">
				<button type="submit" form="form-sales-agents" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
				<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
			</div>
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
					<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="container-fluid">
		{% if error_warning %}
			<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}<button type="button" class="close" data-dismiss="alert">&times;</button></div>
		{% endif %}
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
			</div>
			<div class="panel-body">
				<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-sales-agents" class="form-horizontal">
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-use-logged"><span data-toggle="tooltip" title="{{ help_use_logged }}">{{ entry_use_logged }}</span></label>
						<div class="col-sm-10">
							<select name="module_sales_agents_use_logged" id="input-use-logged" class="form-control">
								{% if module_sales_agents_use_logged %}
									<option value="0">{{ text_no }}</option>
									<option value="1" selected="selected">{{ text_yes }}</option>
								{% else %}
									<option value="0" selected="selected">{{ text_no }}</option>
									<option value="1">{{ text_yes }}</option>
								{% endif %}
							</select>
						</div>
					</div>
					<div class="form-group required">
						<label class="col-sm-2 control-label" for="input-user-group-id">{{ entry_user_group }}</label>
						<div class="col-sm-10">
							<select name="module_sales_agents_user_group_id" id="input-user-group-id" class="form-control" />
								<option value="" selected="selected">{{ text_select }}</option>
								{% for user_group in user_groups %}
									{% if user_group.user_group_id == module_sales_agents_user_group_id %}
										<option value="user_group.user_group_id }}" selected="selected">{{ user_group.name }}</option>
									{% else %}
										<option value="{{ user_group.user_group_id }}">{{ user_group.name }}</option>
									{% endif %}
								{% endfor %}
							</select>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-show-sales-agent"><span data-toggle="tooltip" title="{{ help_show_sales_agent }}">{{ entry_show_sales_agent }}</span></label>
						<div class="col-sm-10">
							<select name="module_sales_agents_show_sales_agent" id="input-show-sales-agent" class="form-control">
								{% if module_sales_agents_show_sales_agent %}
									<option value="0">{{ text_no }}</option>
									<option value="1" selected="selected">{{ text_yes }}</option>
								{% else %}
									<option value="0" selected="selected">{{ text_no }}</option>
									<option value="1">{{ text_yes }}</option>
								{% endif %}
							</select>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-show-agent-order-list"><span data-toggle="tooltip" title="{{ help_show_agent_order_list }}">{{ entry_show_agent_order_list }}</span></label>
						<div class="col-sm-10">
							<select name="module_sales_agents_show_agent_order_list" id="input-show-agent-order-list" class="form-control">
								{% if module_sales_agents_show_agent_order_list %}
									<option value="0">{{ text_no }}</option>
									<option value="1" selected="selected">{{ text_yes }}</option>
								{% else %}
									<option value="0" selected="selected">{{ text_no }}</option>
									<option value="1">{{ text_yes }}</option>
								{% endif %}
							</select>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-customer-orders"><span data-toggle="tooltip" title="{{ help_customer_orders }}">{{ entry_customer_orders }}</span></label>
						<div class="col-sm-10">
							<select name="module_sales_agents_customer_orders" id="input-customer-orders" class="form-control">
								{% if module_sales_agents_customer_orders %}
									<option value="0">{{ text_no }}</option>
									<option value="1" selected="selected">{{ text_yes }}</option>
								{% else %}
									<option value="0" selected="selected">{{ text_no }}</option>
									<option value="1">{{ text_yes }}</option>
								{% endif %}
							</select>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-sales-report"><span data-toggle="tooltip" title="{{ help_sales_report }}">{{ entry_sales_report }}</span></label>
						<div class="col-sm-10">
							<select name="module_sales_agents_sales_report" id="input-sales-report" class="form-control">
								{% if module_sales_agents_sales_report %}
									<option value="0">{{ text_all_orders }}</option>
									<option value="1" selected="selected">{{ text_agent_only }}</option>
								{% else %}
									<option value="0" selected="selected">{{ text_all_orders }}</option>
									<option value="1">{{ text_agent_only }}</option>
								{% endif %}
							</select>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
						<div class="col-sm-10">
							<select name="module_sales_agents_status" id="input-status" class="form-control">
								{% if module_sales_agents_status %}
									<option value="1" selected="selected">{{ text_enabled }}</option>
									<option value="0">{{ text_disabled }}</option>
								{% else %}
									<option value="1">{{ text_enabled }}</option>
									<option value="0" selected="selected">{{ text_disabled }}</option>
								{% endif %}
							</select>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
{{ footer }}